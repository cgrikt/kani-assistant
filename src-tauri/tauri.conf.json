{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kani Assistant",
  "version": "0.1.0",
  "identifier": "com.kani.assistant",
  "build": {
    "frontendDist": "../src",
    "devtools": true
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Kani Assistant - OpenClaw Desktop",
        "width": 480,
        "height": 720,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
